<Application x:Class="AutoMgrW8.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:AutoMgrW8"
             xmlns:converter="using:AutoMgrW8.Converter">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
        <ResourceDictionary Source="Common/StandardStyles.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <Style x:Key="AppPageStyle" TargetType="Grid">
        <Setter Property="Background" Value="#33b5e5" />
      </Style>
      <vm:ViewModelLocator x:Key="Locator" xmlns:vm="using:AutoMgrW8.ViewModel" />

            <converter:InvertoryConverter x:Key="InvertoryConverter" />
            <converter:RepairFtyIsenableConverter x:Key="RepairFtyIsenableConverter" />
        </ResourceDictionary>
  </Application.Resources>
</Application>